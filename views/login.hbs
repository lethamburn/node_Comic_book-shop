<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Comic Book Shop - Login</title>
    <link rel="stylesheet" href="/styles/login.css" />
    <link rel="shortcut icon" href="/uploads/comic_book.ico" />
  </head>
  <body>
   <header>
     <nav>
        {{#if user}}
          <a class="btn" href="/">Home</a>
          <a class="btn" href="/comics">Comics</a>
          <form action="/auth/logout" method="POST">
            <input type="submit" value="Logout" class="btn2" />
          </form>
        {{else}}
          <a class="btn" href="/auth/login">Login</a>
          <a class="btn" href="/auth/register">Register</a>
        {{/if}}

      </nav>
    </header>
    <h1>Login</h1>
    <div class="container">
      <form action="/auth/login" method="POST">

        <label>
          <p>Email</p>
          <input name="email" type="email" required placeholder="email" />
        </label>

        <label>
          <p>Password</p>
          <input
            name="password"
            type="password"
            required
            placeholder="password"
          />
        </label>

        <button class="btn" type="submit">Login</button>

      </form>
      {{#if error}}
        <div style="color: red">{{error}}</div>
      {{/if}}
    </div>
  <footer class="footer-distributed">

					<p class="footer-links">
					<a class="link-1" href="/">Home</a>

					<a href="https://github.com/lethamburn">GitHub</a>

					<a href="#">Twitter</a>

					<a href="#">Facebook</a>

					<a href="#">Instagram</a>

					<a href="#">Contact</a>
				</p>

				<p>Comic Book Shop &copy; 2021</p>
			</div>

		</footer>
  </body>
</html>