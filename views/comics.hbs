<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> {{title}} </title>
    <link rel="stylesheet" href="/styles/styles.css" />
  </head>
  <body>
    <header>
      <nav>
        <a href="#">HOME</a>
        <a href="#">SERIES</a>
        <a href="#">COMICS</a>
        <a href="#">PROFILE</a>
        <a href="#">ABOUT</a>
        <div class="animation start-home"></div>
      </nav>
    </header>
    <main>
      <div class="wrapper">
        {{#each arrayComics}}
          <div class="card">
            <img src="{{image}}" alt="" width="200px" />
            <div class="descriptions">
              <h2>{{title}}</h2>
              <h3>{{subtitle}}</h3>
              <h5><strong>Number:</strong>
                {{numberOfTheCollection}}
                of
                {{numberTotalCollection}}</h5>
              <h5><strong>Authors: </strong>{{authors}}</h5>
              <h5><strong>Number of pages: </strong>{{numberOfPages}}</h5>
              <h5><strong>Date of upload: </strong>{{dateOfUpload}}</h5>
              <h5><strong>Score: </strong>{{score}}</h5>
              <button type="submit">Delete</button>
              <button type="submit">Edit</button>
            </div>
          </div>
        {{/each}}
        <form action="/comics/add-comic" method="POST" class="card">
          <img
            width="200px"
            src="https://scontent.fmad10-1.fna.fbcdn.net/v/t1.6435-9/200897643_3032949007028884_6290984471328513270_n.jpg?_nc_cat=107&ccb=1-3&_nc_sid=730e14&_nc_ohc=w678-1PvANQAX8Lz-V4&_nc_ht=scontent.fmad10-1.fna&oh=71592f4806cb4a73a38bb0b15a0a7812&oe=60CFF478"
            alt=""
          />
          <div class="descriptions">
            <input type="text" name="title" placeholder="Title" />
            <input type="text" name="subtitle" placeholder="Subtitle" />
            <input type="text" name="image" placeholder="Image" />
            <input
              type="text"
              name="numberOfTheCollection"
              placeholder="Number of the Collection"
            />
            <input
              type="text"
              name="numberTotalCollection"
              placeholder="Total # Collection"
            />
            <input type="text" name="authors" placeholder="Authors" />
            <input
              type="text"
              name="numberOfPages"
              placeholder="Number of Pages"
            />
            <input type="text" name="score" placeholder="Score" />
            <input
              type="text"
              name="dateOfUpload"
              placeholder="Date of Upload"
            />
            <button type="submit">Add Comic</button>
          </div>

        </form>
      </div>
    </main>
  </body>
</html>